<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECF3"

    tools:context=".add_details">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/flower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wavetop"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/profileimage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:civ_border_width="2dp"
                    android:layout_marginTop="50dp"
                    app:civ_border_color="#FF000000"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btnbg"

                    >


                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColorHint="@color/white"
                        android:inputType="textPersonName"
                        android:background="@drawable/btnbg2"
                        android:hint="Enter Name"
                        android:elevation="5dp"
                        android:textColor="@color/white"
                        android:textSize="16dp"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@id/con_name"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btnbg"

                    >


                    <EditText
                        android:id="@+id/productname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="20dp"

                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"                        android:inputType="textEmailAddress"
                        android:background="@drawable/btnbg2"
                        android:hint="Enter Product Name"
                        android:textColorHint="@color/white"
                        android:elevation="5dp"
                        android:textColor="@color/white"
                        android:textSize="16dp"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@id/con_email"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btnbg"

                    >

                    <EditText
                        android:id="@+id/productprice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"                        android:background="@drawable/btnbg2"
                        android:hint="Enter Product Price"
                        android:inputType="number"
                        android:textColorHint="@color/white"
                        android:elevation="5dp"
                        android:textColor="@color/white"
                        android:textSize="16dp"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>






                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/btnbg"
                    android:elevation="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    app:layout_constraintTop_toBottomOf="@id/con_password">

                    <Button
                        android:id="@+id/Add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/btnbg2"
                        android:elevation="6dp"
                        android:text="Add"
                        android:paddingRight="20dp"
                        android:textColor="@color/white"
                        android:textSize="20dp"


                        />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>